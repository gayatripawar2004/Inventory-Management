<h1>Update Item</h1>

<form action="/update_item" method="post">
    <input type="hidden" name="item_id" value="<%= item[0].item_id %>">

   Update Item Name:
    <input type="text" name="item_name" value="<%= item[0].item_name %>"><br><br>

   Update Item Code:
    <input type="text" name="item_code" value="<%= item[0].item_code %>"><br><br>

   Update Quantity:
    <input type="number" name="quantity" value="<%= item[0].quantity %>"><br><br>

   Update Price:
    <input type="number" step="0.01" name="price" value="<%= item[0].price %>"><br><br>

   Update Expiry Date:
    <input type="date" name="expiry_date" value="<%= item[0].expiry_date.toISOString().split('T')[0] %>"><br><br>

    <button type="submit">Update</button>
</form>
